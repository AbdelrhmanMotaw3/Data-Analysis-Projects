while True :
    a = int(input('Enter the first number: '))
    b = int(input('Enter the second number: '))
    c = int(input('Enter a number of operation you need\n 1.add\n 2.Difference\n 3.Multiply\n 4.Divsion\n 5.integer divsion\n 6.exponent\n '))
    add = a+b
    Diff = a-b
    Multiply = a*b
    Division = a/b
    integer_division = a//b
    exponent = a ** b
    if c == 1 :
        print(f'the addition of {a} and {b} is {add}')
    elif c == 2 :
        print(f'the difference of {a} and {b} is {Diff}')    
    elif c == 3 :
        print(f'the multiplication of {a} and {b} is {Multiply}')   
    elif c == 4 and b != 0 :
        print(f'the division of {a} and {b} is {Division}')  
    elif c == 5 and b!=0 :
        print(f'the integer division of {a} and {b} is {integer_division}')      
    elif c == 6 :
        print (f'the exponentiation of {a} and {b} is {exponent}')    
    else :
        print ('Invalid Operation, please try again')
        continue 
    break    
    
